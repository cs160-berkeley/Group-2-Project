<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/set_billing_address">
    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="296dp"
        android:orientation="vertical"
        android:layout_gravity="center|center_horizontal"
        android:padding="16dp"
        android:background="@drawable/alerts_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/cancel_edit_billing"
                android:background="@color/white"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_close_24dp" />
            <EditText
                android:id="@+id/billing_street_name"
                android:layout_height="42dp"
                android:layout_width="match_parent"
                android:layout_below="@id/cancel_edit_billing"
                android:hint="Street address"/>

            <EditText
                android:id="@+id/billing_city"
                android:layout_below="@id/billing_street_name"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:hint="City"/>

            <EditText
                android:id="@+id/billing_state"
                android:layout_below="@id/billing_city"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:hint="State" />

            <EditText
                android:id="@+id/billing_zip"
                android:layout_below="@id/billing_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Zip code"/>

            <Button
                android:layout_width="152dp"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="Okay"
                android:id="@+id/confirm_edit_billing"
                android:background="@drawable/button_style"
                android:textColor="@drawable/button_text_style"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>